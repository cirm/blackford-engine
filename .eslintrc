{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:flowtype/recommended",
    "airbnb",
    "plugin:jest/recommended",
    "plugin:lodash-fp/recommended"
  ],
  "plugins": [
    "lodash-fp",
    "flowtype",
    "jest"
  ],
  "env": {
    "node": true,
    "jest/globals": true
  },
  "rules": {
    "flowtype/use-flow-type": 1,
    "jsx-a11y/href-no-hash": "off",
    "jsx-a11y/anchor-is-valid": ["warn", { "aspects": ["invalidHref"] }]
  }
}
